{
  "verbose": true,
  "npm": true,
  "moduleResolution": "node",
  "plugins": {
    "local": {
      "browsers": ["chrome"],
      "browserOptions": {
        "chrome": [
          "headless"
        ]
      }
    },
    "istanbul": {
      "reporters": [ "text", "text-summary", "lcov" ],
      "include": [
        "**/src/**/*.js"
      ],
      "exclude": [
        "**/test/**"
      ],
      "thresholds": {
        "global": {
          "branches": 88,
          "lines": 95,
          "functions": 95,
          "statements": 95
        }
      }
    }
  }
}
