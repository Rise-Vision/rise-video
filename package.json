{
  "name": "rise-video",
  "version": "1.0.1",
  "description": "Web component for playing video files on a Rise Vision Template page",
  "scripts": {
    "prebuild": "eslint .",
    "postbuild": "concat -o dist/rise-video.js dist/rise-video.js node_modules/video.js/dist/video.min.js node_modules/videojs-playlist/dist/videojs-playlist.min.js",
    "build": "polymer build && ./node_modules/rise-common-component/scripts/extract-source.sh rise-video",
    "test": "eslint . && polymer test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rise-Vision/rise-video.git"
  },
  "keywords": [
    "Rise",
    "Vision",
    "Digital",
    "Signage",
    "video"
  ],
  "author": "Rise Vision",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/Rise-Vision/rise-video/issues"
  },
  "homepage": "https://github.com/Rise-Vision/rise-video/#readme",
  "dependencies": {
    "@polymer/polymer": "3.1.0",
    "@webcomponents/webcomponentsjs": "^2.1.3",
    "rise-common-component": "git://github.com/Rise-Vision/rise-common-component.git#v1.0.7",
    "video.js": "7.6.0",
    "videojs-playlist": "4.3.1"
  },
  "devDependencies": {
    "@polymer/test-fixture": "^4.0.2",
    "chai": "^4.2.0",
    "concat": "^1.0.3",
    "eslint": "^5.16.0",
    "mocha": "^5.2.0",
    "sinon": "^7.3.2",
    "wct-mocha": "^1.0.0"
  }
}
